{
  "name": "temp-admin-privileges",
  "version": "1.0.0",
  "description": "Temporary Admin Privileges Manager for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "install-helper": "sudo node helper/install-helper.js"
  },
  "build": {
    "appId": "com.yourcompany.temp-admin",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.3",
    "nodemailer": "^6.9.0",
    "proper-lockfile": "^4.0.2",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "sudo-prompt": "^9.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
